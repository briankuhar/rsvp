<div class="col-sm-12">
    <h2><%= @event.event_name %> Guests</h2>
    <div class="float-right">
    <%= link_to "Add Guest", new_event_guest_path, class: "btn btn-primary btn-lg float-right" %></div>
  </div>

  <table class="table table-striped table-hover">
    <tr>
      <th>Guest Name</th>
      <th>Guest Status</th>
      <th>Responded On</th>
      <th>Guest Email</th>
      <th>Guest Phone</th>
      <th>Actions</th>
    </tr>
    <% @guests.each do |guest| %>
    <tr>
      <td><%= guest.first_name + " " + guest.last_name %></td>
      <td>
        <label class="switch">
          <!--<input type="checkbox">
          <div class="slider round"></div>-->
            <%= check_box_tag 'status', guest.id, guest.guest_status, 
                              data: { 
                                remote: true, 
                                url: url_for( action: :update_status, id: guest.id ),
                                method: "PATCH"
                              } 
            %>
            <div class="slider round"></div>
        </label>
      </td>
      <td>No Response</td>
      <td><%= guest.email %></td>
      <td><%= guest.phone %></td>
      <td><%= link_to 'Delete', event_guest_path(@event, guest), method: :delete, data: { confirm: "Are you sure?" } %></td>
    </tr>
    <% end %>
  </table>
  
  <%= link_to 'Home', root_path %>