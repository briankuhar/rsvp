<div class="guestsForm">
    
  <%= form_for [@event, @guest] do |g| %>
    <%= render 'shared/error_messages' %>
    <div class="row">
      <div class="form-group col-sm-3">
        <%= g.label :first_name, class: "control-label" %>
        <%= g.text_field :first_name, class: "form-control" %>
      </div>
      
      <div class="form-group col-sm-3">
        <%= g.label :last_name, class: "control-label" %>
        <%= g.text_field :last_name, class: "form-control" %>
      </div>
      
      <div class="form-group col-sm-3">
        <%= g.label :email, class: "control-label" %>
        <%= g.text_field :email, class: "form-control" %>
      </div>
      
      <div class="form-group col-sm-3">
        <%= g.label :phone, class: "control-label" %>
        <%= g.text_field :phone, class: "form-control" %>
      </div>
      
<hr>
    </div>
  <% end %>
</div>