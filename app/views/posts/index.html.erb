<row>
  <div class="col-md-8 col-md-8-offset-2">
    
    <%= will_paginate @posts, renderer: BootstrapPagination::Rails %>
    <% @posts.each do |p| %>
      <div class="blog-post well">
        <h2><%= p.title %></h2>
        <h4><strong>Posted By:</strong> <%= p.user.first_name + " " + p.user.last_name %></h4>
        <h4><strong>Posted At:</strong> <%= p.created_at %></h4>
        <hr>
        <p><%= simple_format(p.body) %></p>
      </div>
    <% end %>
    
  </div>
</row>