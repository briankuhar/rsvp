<%= form_for @post do |p| %>
    <div class="col-sm-8 col-sm-8-offset-2 well">
      
      <div class="form-group">
        <%= p.label :title, class: "form-label" %>
        <%= p.text_field :title, class: "form-control" %>
      </div>
      
      <div class="form-group">
        <%= p.label :body, class: "form-label" %>
        <%= p.text_area :body, rows: 15, class: "form-control" %>
      </div>
      
      <%= p.submit "Update", class: "btn btn-primary" %>
      <%= link_to "Back", :back, class: "btn btn-default" %>
      
    </div>
<% end %>