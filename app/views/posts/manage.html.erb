<h2>Manage Blog Posts</h2>
<%= link_to "New Post", new_post_path, class: "btn btn-primary float-right" %>
<%= will_paginate @posts %>
<table class="table table-striped table-hover">
  <tr>
    <th>Post ID</th>
    <th>Post Title</th>
    <th>Posted By</th>
    <th>Posted At</th>
    <th>Actions</th>
  </tr>
  <% @posts.each do |p| %>
    <tr>
      <td><%= p.id %></td>
      <td><%= p.title %></td>
      <td><%= p.user.first_name + " " + p.user.last_name %></td>
      <td><%= p.created_at %></td>
      <td><%= link_to "Edit", edit_post_path(p) %> | 
          <%= link_to "Delete", p, method: :delete %></td>
    </tr>
  <% end %>
  
</table>