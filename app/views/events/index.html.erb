<% if user_signed_in? %>
  
  <div class="col-sm-10 col-sm-offset-1">
    <h2>My Events</h2>
    <div class="float-right">
    <%= link_to "New Event", new_event_path, class: "btn btn-primary btn-lg float-right" %></div>
  </div>
  <%= will_paginate @events, renderer: BootstrapPagination::Rails %>
  <% @events.each do |event| %>
    <div class="col-sm-10 col-sm-offset-1 well">
      <h2 style="text-align: center;"><%= link_to event.event_name, event_guests_path(event.id) %></h2>
      <div class="col-sm-7">
        
        <h3>Event Type: <%= event.event_type %></h3>
        <h3>Guest Count: <%= event.guests.count %></h3>
      </div>
      <div class="col-sm-5">
        <h3>Event Date: <%= event.event_date %></h3>
        <h3>RSVPs Due By: <%= event.event_rsvp_date %></h3>
        <p><%= link_to 'Edit', edit_event_path(event.id) %> | 
        <%= link_to 'Delete', event, method: :delete, 
                        data: { remote: true, :type => :json,
                                confirm: "Are you sure you want to delete this event?",
                                ok: 'Delete', cancel: 'Cancel'} %></p>
      </div>
    </div>
  <% end %>


<% end %>

