<% if user_signed_in? %>
  
  <div class="col-sm-10 col-sm-offset-1">
    <h2>My Events</h2>
    <div class="float-right">
    <%= link_to "New Event", new_event_path, class: "btn btn-primary btn-lg float-right" %></div>
  </div>
  
  <% @events.each do |event| %>
    <div class="col-sm-10 col-sm-offset-1 well">
      <div class="col-sm-8">
        <h2><%= link_to event.event_name, event_guests_path(event.id) %></h2>
        <h3>Event Type: <%= event.event_type %></h3>
        <h3>Guest Count: <%= event.guests.count %></h3>
      </div>
      <div class="col-sm-4">
        <h3>Event Date: <%= event.event_date %></h3>
        <h3>RSVPs Due By: <%= event.event_rsvp_date %></h3>
        <p><%= link_to 'Edit', edit_event_path(event.id) %> | 
        <%= link_to 'Delete', event, method: :delete, data: { remote: true, confirm: "Are you sure you want to delete this event?" } %></p>
      </div>
    </div>
  <% end %>


<% end %>

