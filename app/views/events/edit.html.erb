<h2>Edit <%= @event.event_name %></h2>

<%= form_for(@event) do |f| %>
<%= render 'shared/error_messages' %>
    <div class="col-sm-8 well">
        <h4 style="text-align: center;">General Event Info</h4>
        <hr>
        <div class="form-group">
          <%= f.label :event_name, class: "control-label" %>
          <%= f.text_field :event_name, class: 'form-control' %>
        </div>
      
        <div class="form-group">
          <%= f.label :event_date, class: "control-label" %>
          <%= f.text_field :event_date, class: 'datepicker form-control' %>
        </div>
        
        <div class="form-group">
          <%= f.label :event_rsvp_date, "RSVPs Due By Date", class: "control-label" %>
          <%= f.text_field :event_rsvp_date, class: 'datepicker form-control' %>
        </div>
        
        <div class="form-group">
          <%= f.label :path, "Custom URL (e.g. rsvpsite.com/event/#{@event.path})", class: "control-label" %>
          <%= f.text_field :path, class: 'form-control' %>
        </div>
    </div>
    
  <%= f.fields_for :event_detail do |ff| %>
  <%= ff.hidden_field :event_id, :value => @event.id %>
    <div class="col-sm-8 well">
        <h4 style="text-align: center;">Event Details</h4>
        <hr>
        <div class="form-group">
          <%= ff.label :event_info, "General Event Information", class: "control-label" %>
          <%= ff.text_area :event_info, class: 'form-control' %>
        </div>
      
        <div class="form-group">
          <%= ff.label :event_accom, "Accommodation Information", class: "control-label" %>
          <%= ff.text_area :event_accom, class: 'form-control' %>
        </div>
        
        <div class="form-group">
          <%= ff.label :event_transport, "Transportation Information", class: "control-label" %>
          <%= ff.text_area :event_transport, class: 'form-control' %>
        </div>
    </div>
    <div class="col-sm-8 well">
        <h4 style="text-align: center;">Venue Info</h4>
        <hr>
        <div class="form-group">
          <%= ff.label :venue_name, class: "control-label" %>
          <%= ff.text_field :venue_name, class: 'form-control' %>
        </div>
      
        <div class="form-group">
          <%= ff.label :venue_street_addr1, "Street Address 1", class: "control-label" %>
          <%= ff.text_field :venue_street_addr1, class: 'form-control' %>
        </div>
        
        <div class="form-group">
          <%= ff.label :venue_street_addr2, "Street Address 2", class: "control-label" %>
          <%= ff.text_field :venue_street_addr2, class: 'form-control' %>
        </div>
        
        <div class="form-group">
          <%= ff.label :venue_city, "City", class: "control-label" %>
          <%= ff.text_field :venue_city, class: 'form-control' %>
        </div>
        
        <div class="form-group">
          <%= ff.label :venue_state, "State", class: "control-label" %>
          <%= ff.text_field :venue_state, class: 'form-control' %>
        </div>
        
        <div class="form-group">
          <%= ff.label :venue_zip, "Zip Code", class: "control-label" %>
          <%= ff.text_field :venue_zip, class: 'form-control' %>
        </div>
    </div>
  
  <% end %>
  <div class="row">
    <div class="col-sm-12">          
      <%= f.submit "Save Changes", class: "btn btn-primary" %>
      <%= link_to "Back", :back, class: "btn btn-default" %>
    </div>
  </div>
  
  <br><br>
<% end %>