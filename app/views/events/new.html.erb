<h2>New Event</h2>

<div class="col-sm-6">
  <%= form_for(@event) do |f| %>
    <%= render 'shared/error_messages' %>
  
    <div class="form-group">
      <%= f.label :event_type %>
      <%= f.select :event_type, ['wedding','birthday'], {}, class: 'form-control' %>
    </div>
    
    <div class="form-group">
      <%= f.label :event_date %>
      <%= f.text_field :event_date, class: 'form-control' %>
    </div>
    
    <div class="form-group">
      <%= f.submit "Create Event", class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>